  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach: Chat",
      "port": 9222,
      "restart": true,
      "localRoot": "${workspaceFolder:chat}",
      "remoteRoot": "/app/chat"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach: Stream",
      "port": 9223,
      "restart": true,
      "localRoot": "${workspaceFolder:stream}",
      "remoteRoot": "/app/stream"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach: User",
      "port": 9224,
      "restart": true,
      "localRoot": "${workspaceFolder:user}",
      "remoteRoot": "/app/user"
    }
  ],
  "compounds": [
    {
      "name": "Attach: Chat+Deps",
      "configurations": ["Attach: Chat", "Attach: Stream", "Attach: User"]
    }
  ]
}
